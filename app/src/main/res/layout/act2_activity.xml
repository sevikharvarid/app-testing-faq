<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".act2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle1"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="108dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_height="104dp"
        android:src="@drawable/gambar1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/loginView"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        style="@style/TextStyleLogin"
        tools:text="LOGIN" />

</LinearLayout>


   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:layout_marginTop="70dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/logemail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boxemail"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:paddingLeft="25dp"
        android:hint="Enter Email"/>
    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/logpassword1"
        android:inputType="numberPassword"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boxemail"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:paddingLeft="25dp"
        android:hint="Enter Password"/>
    <TextView
        android:id="@+id/forgot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#808080"
        android:lineSpacingExtra="2px"
        android:paddingRight="15dp"
        android:layout_gravity="right"
        android:gravity="center_horizontal"
        tools:text="Forgot Password?"
        />
</LinearLayout>


    <TextView
        android:id="@+id/tvinfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Login Attempts remaining:"
        android:textColor="@color/colorAccent"/>
    <Button
        android:id="@+id/btnLog"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="@drawable/loginbg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account?"/>
        <TextView
            android:id="@+id/signup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1183d0"
            android:text="Register"/>

    </LinearLayout>

</LinearLayout>